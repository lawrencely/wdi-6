<h2>Edit a plant</h2>

<form action="/plants/<%= @plant.id %>" method="post">
  <label for="name">Name:</label>
  <input id="name" name="name" placeholder="Milkweed" value="<%= @plant.name %>">

  <label for="image">Image:</label>
  <input type="url" id="image" name="image" value="<%= @plant.image %>" placeholder="http://something.com/whatever.jpg">

  <button>Update plant</button>
</form>