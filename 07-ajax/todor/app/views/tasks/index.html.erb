<ul id="tasks">

</ul>

<%= form_for Task.new do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit %>
  <% end %>

<script type="template/handlebars" id="taskTemplate">
<li>
  {{#if completed }}
    <input type="checkbox" checked="checked">
  {{else}}
    <input type="checkbox">
  {{/if}}
  <a href="/tasks/{{ id }}">
    {{ description }}
  </a>
  <button>&#10008;</button>
</li>
</script>
